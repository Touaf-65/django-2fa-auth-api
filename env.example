# Configuration de l'environnement Django
DEBUG=True
SECRET_KEY=your-secret-key-here
ALLOWED_HOSTS=localhost,127.0.0.1

# Base de données
DATABASE_URL=sqlite:///db.sqlite3

# Configuration des Apps (Nouveau!)
# =================================

# Mode de configuration des apps
# Options: minimal, default, development, production
APPS_CONFIG_MODE=default

# Configuration individuelle des apps (override le mode)
# Options: true, false
ENABLE_NOTIFICATIONS=true
ENABLE_SECURITY=true
ENABLE_PERMISSIONS=true
ENABLE_ADMIN_API=true
ENABLE_API=true
ENABLE_MONITORING=true
ENABLE_ANALYTICS=true
ENABLE_INTERNATIONALIZATION=true

# Configuration Email
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=smtp.sendgrid.net
EMAIL_HOST_USER=apikey
EMAIL_HOST_PASSWORD=your-sendgrid-api-key
EMAIL_PORT=587
EMAIL_USE_TLS=True
DEFAULT_FROM_EMAIL=noreply@yourdomain.com

# Configuration SMS (Twilio)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=your-twilio-phone-number

# Configuration Push Notifications (Firebase)
FIREBASE_SERVER_KEY=your-firebase-server-key

# Configuration JWT
JWT_ACCESS_TOKEN_LIFETIME=15
JWT_REFRESH_TOKEN_LIFETIME=7

# Configuration de sécurité
RATE_LIMIT_ENABLED=true
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=900

# Configuration CORS
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Configuration de cache
CACHE_BACKEND=django.core.cache.backends.locmem.LocMemCache

# Configuration des médias
MEDIA_ROOT=media/
MEDIA_URL=/media/
STATIC_ROOT=staticfiles/
STATIC_URL=/static/

# Configuration de logging
LOG_LEVEL=INFO

# Configuration de monitoring
MONITORING_ENABLED=true
METRICS_RETENTION_DAYS=90

# Configuration d'analytics
ANALYTICS_ENABLED=true
REPORT_RETENTION_DAYS=30

# Configuration de l'app Internationalization
# Fournisseur de traduction par défaut (mock, google, microsoft, deepl, openai)
DEFAULT_TRANSLATION_PROVIDER=mock

# Google Translate API
# GOOGLE_TRANSLATE_API_KEY=your_google_api_key

# Microsoft Translator API
# MICROSOFT_TRANSLATE_API_KEY=your_microsoft_api_key
# MICROSOFT_TRANSLATE_REGION=global

# DeepL API
# DEEPL_API_KEY=your_deepl_api_key

# OpenAI API
# OPENAI_API_KEY=your_openai_api_key

# Exemples de configurations prédéfinies:
# ======================================

# Starter minimal (authentification + utilisateurs seulement)
# APPS_CONFIG_MODE=minimal

# Starter sans monitoring (pour développement rapide)
# ENABLE_MONITORING=false
# ENABLE_ANALYTICS=false

# Starter sans notifications (pour tests)
# ENABLE_NOTIFICATIONS=false

# Starter de production (toutes les apps activées)
# APPS_CONFIG_MODE=production